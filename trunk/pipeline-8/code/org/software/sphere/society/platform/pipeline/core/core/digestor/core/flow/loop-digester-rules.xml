<?xml version="1.0"?>

<digester-rules>

	<!-- 流程模型:循环:while -->
	<pattern value="*/while">
		<object-create-rule classname="org.software.sphere.society.platform.pipeline.core.flow.loop.While" />
		<set-properties-rule />

		<!-- 导入 data-node-define的 digestor文件 -->
<!--		<include path="org/software/sphere/society/platform/pipeline/core/core/digestor/common/data-node-define-digester-rules.xml"/>-->

		<!-- 导入 flow的digestor文件  自身进行递归调用-->
<!--		<include path="org/software/sphere/society/platform/pipeline/core/core/digestor/core/flow/flow-node-digester-rules.xml"/>-->

		<set-next-rule methodname="appendFlow" paramtype="org.software.sphere.society.platform.pipeline.core.flow.FlowNode" />
	</pattern>
	
	<!-- 流程模型:循环:for -->
	<pattern value="*/for">
		<object-create-rule classname="org.software.sphere.society.platform.pipeline.core.flow.loop.For" />
		<set-properties-rule />

		<!-- 导入 data-node-define的 digestor文件 -->
<!--		<include path="org/software/sphere/society/platform/pipeline/core/core/digestor/common/data-node-define-digester-rules.xml"/>-->
		
		<!-- 导入 flow的digestor文件  自身进行递归调用-->
<!--		<include path="org/software/sphere/society/platform/pipeline/core/core/digestor/core/flow/flow-node-digester-rules.xml"/>-->
		
		<set-next-rule methodname="appendFlow" paramtype="org.software.sphere.society.platform.pipeline.core.flow.FlowNode" />
	</pattern>
</digester-rules>
